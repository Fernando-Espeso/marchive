<div id="related">
  <div class="related-title">RELATED PRODUCTS</div>

  {%- assign current_product = product.id -%}
    {%- for product in collections.all.products -%}
      {%- if product.id != current_product and product.available -%}
        {% include 'product-body' %}
      {%- endif -%}
    {%- endfor -%}
</div>
