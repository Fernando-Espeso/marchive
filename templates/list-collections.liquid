<div id="products">
  {% for product in collections.all.products %}
    {% include 'product-body' %}
  {% endfor %}
</div>
<script>
$(document).ready(function() {
  var width = $(window).width();
  if (width < 600){
    $(".filt .dropdown.filter").removeClass("dropped");
    $(".normal .dropdown").removeClass("dropped");
    $(".normal .link").removeClass("active"); }
  else{
    $(".filt ..dropdown.filter").removeClass("dropped");
    $(".normal .dropdown").addClass("dropped");
    $(".normal .link").addClass("active");
  }
});
$(window).resize(function() {
  var width = $(window).width();
  if (width < 600){
    $(".filt .dropdown.filter").removeClass("dropped");
    $(".normal .dropdown").removeClass("dropped");
    $(".normal .link").removeClass("active"); }
  else{
    $(".filt .dropdown.filter").removeClass("dropped");
    $(".normal .dropdown").addClass("dropped");
    $(".normal .link").addClass("active");
  }
});
</script>
<style>
.filt{
  display: grid;
}
