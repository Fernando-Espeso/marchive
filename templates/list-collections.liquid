<div id="products">
  {% for product in collections.all.products %}
    {% include 'product-body' %}
  {% endfor %}
</div>
<script>
$(document).ready(function() {
  var width = $(window).width();
  if (width < 600){
    $(".drop .dropdown").removeClass("dropped");
    $(".drop .link").removeClass("active"); }
  else{
    $(".filt .drop .dropdown").removeClass("dropped");
    $(".drop .dropdown").addClass("dropped");
    $(".drop .link").addClass("active");
  }
});
$(window).resize(function() {
  var width = $(window).width();
  if (width < 600){
    $(".drop .dropdown").removeClass("dropped");
    $(".drop .link").removeClass("active"); }
  else{
    $(".drop .dropdown").addClass("dropped");
    $(".drop .link").addClass("active");
  }
});
</script>
