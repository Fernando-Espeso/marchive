<!--Content-->
{%- section 'home_entrance' -%}
<div id="products">
  <div class="back link hov"><a onclick="history.back()">Back</a></div>
</div>
<div class="main-page">
  <div class="page_content">
    {{ page.content | replace: '_16x16', '' | replace: '_32x32', '' | replace: '_50x50', '' | replace: '_100x100', '' | replace: '_160x160', '' | replace: '_240x240', '' | replace: '_480x480', '' | replace: '_600x600', '' | replace: '_1024x1024', '' }}
  </div>
</div>
<style>

  .switch-view{
    display: none;
  }
  .page_content {
    z-index: 1;
    width: 70vw;
    grid-column: span 9;
    padding: 20px;
    font-size: 14px;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    line-height: 17px;
   }
   header{
    display:none;
   }
  .banner_main{
    overflow: hidden;
    position: absolute;
    top: 0;
    opacity: 0.5;
    height: var(--h);
    width: 100%;
  }
  .banner_main img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .link-about{
    background-color: var(--black);
    color: var(--white);
  }
  .back{
    height: fit-content;
  }
</style>
